<h1>Cart</h1>

<% if !@items.empty? %>
<center>
<table class = "cart-items">
  <tr>
    <th>Item</th>
    <th>Sold By</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Subtotal</th>
    <th>Available Discounts</th>
  </tr>
  <% @items.each do |item,quantity| %>
    <tr id= "cart-item-<%=item.id%>">
      <td>
        <p align = "center">
          <span>
            <img align = "center" id="cart-image" src= <%= item.image %>>
            <%=link_to item.name, "/items/#{item.id}" %>
          </span>
        </p>
      </td>
      <td>
        <p align = "center">
          <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}"%>
        </p>
      </td>
      <td>
        <p><%=number_to_currency(item.price)%></p>
      </td>
      <td>
        <center>
          <p><%=quantity%>
            <%= button_to "+", "/cart/#{item.id}/increment", form: {style: 'height: 30px; width: 0px; padding: 0; margin: 0;'}, method: :patch %>
            <%= button_to "-", "/cart/#{item.id}/decrement", form: {style: 'height: 30px; width: 0px; padding: 0; margin: 0;'}, method: :patch %>
          </p>
          <p><%= link_to "Remove", "/cart/#{item.id}",method: :delete %></p>
        </center>
        </td>
      <td>
        <p><%=number_to_currency(cart.subtotal(item))%></p>
    </td>
    <td>
      <% if item.find_discounts != [] %>
          <% item.find_discounts.each do |discount| %>
          <p><strong><%=discount.percentage%>% off </strong> if you buy <strong><%=discount.min_quantity%></strong> items or more </p>
          <% end %>
      <% else %>
        <p> No discounts available for this item </p>
        <% end %>
    </tr>
  <% end %>
</table>
  <p>Total: <%= number_to_currency(cart.total) %></p>
  <p><%= link_to "Empty Cart", "/cart", method: :delete %></p>
  <% if !current_user %>
    <p>You must <%= link_to "register", '/register'%> or <%= link_to "log in", '/login' %> to finish checking out.</p>
  <% else %>
    <p><%= link_to "Checkout", "/orders/new", method: :get %></p>
<% end %>
<% else %>
  <h3 align= "center">Cart is currently empty</h3>
<% end %>
</center>
